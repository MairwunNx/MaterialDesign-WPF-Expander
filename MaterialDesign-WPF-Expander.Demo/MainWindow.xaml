<Window
    x:Class="MaterialDesign_WPF_Expander.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MaterialDesign_WPF_Expander.Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdex="clr-namespace:MaterialDesign_WPF_Expander;assembly=MaterialDesign-WPF-Expander"
    Title="MainWindow"
    Width="886"
    Height="565"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Padding="20"
            VerticalAlignment="Top"
            FontFamily="Roboto Light"
            FontSize="36"
            Foreground="#FF424242"
            Text="Here's what you get with every domain"
            TextWrapping="WrapWithOverflow" />

        <mdex:Expander Grid.Row="1" ExpanderIconIsVisible="True" />

        <!--  <Grid Grid.Row="1" Background="{DynamicResource Ex-Background-Brush}">
            <Image Source="{StaticResource PlusIcon}" />
        </Grid>-->
    </Grid>
</Window>
